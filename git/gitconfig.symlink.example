[hub]
  protocol = https
[user]
  name = AUTHORNAME
  email = AUTHOREMAIL
[alias]
  co = checkout
  promote = !$ZSH/bin/git-promote
  wtf     = !$ZSH/bin/git-wtf
  rank-contributers = !$ZSH/bin/git-rank-contributers
  count   = !git shortlog -sn
  ci      = commit --verbose --no-verify
  aa      = add --all

  ff = merge --ff-only
  noff = merge --no-ff
  fa = fetch --all
  b = branch

  l = "!. ~/.githelpers && pretty_git_log"
  r = !git l -30
  ra = !git r --all
[color]
  diff = auto
  status = auto
  branch = auto
  ui = true
[core]
  excludesfile = ~/.gitignore
  editor = nvim
  ignorecase = false
[apply]
  whitespace = nowarn
[merge]
  tool = vimdiff
[mergetool]
  keepBackup = false
[difftool]
  prompt = false
[help]
  autocorrect = 1
[push]
  default = simple
[credential]
  helper = osxkeychain
[diff]
  algorithm = patience
[pager]
  diff = diff-so-fancy | less --tabs=1,5 -RFX
  show = diff-so-fancy | less --tabs=1,5 -RFX
[branch]
  sort = -committerdate
